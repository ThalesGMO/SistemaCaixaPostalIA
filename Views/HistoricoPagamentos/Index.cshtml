@model IEnumerable<HistoricoPagamento>
@{
    ViewData["Title"] = "Histórico de Pagamentos";
}

<h4 class="text-white mb-3"><i class="bi bi-receipt"></i> Histórico de Pagamentos</h4>

<div class="card bg-dark border-secondary">
    <div class="card-body p-0">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Caixa</th>
                    <th>Cliente</th>
                    <th>Valor Pago</th>
                    <th>Forma</th>
                    <th>Observação</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="6" class="text-center text-muted">Nenhum pagamento registrado</td></tr>
                }
                @foreach (var pagamento in Model)
                {
                    <tr>
                        <td>@pagamento.DataPagamento.ToString("dd/MM/yyyy")</td>
                        <td>@pagamento.Cobranca?.CaixaPostal?.Codigo</td>
                        <td>@pagamento.Cobranca?.CaixaPostal?.Cliente?.Nome</td>
                        <td>@pagamento.ValorPago.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                        <td>@pagamento.FormaPagamento?.Nome</td>
                        <td>@pagamento.Observacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
