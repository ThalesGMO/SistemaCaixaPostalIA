@model ClienteViewModel
@{
    ViewData["Title"] = "Novo Cliente";
}

<h4 class="text-white mb-3"><i class="bi bi-person-plus"></i> Novo Cliente</h4>

<div class="card bg-dark border-secondary" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Criar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label text-white">Nome</label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-white">Email</label>
                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label text-white">Telefone</label>
                <input asp-for="Telefone" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdClienteStatus" class="form-label text-white">Status</label>
                <select asp-for="IdClienteStatus" asp-items="Model.ListaStatus"
                        class="form-select bg-dark text-white border-secondary"></select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-check-lg"></i> Salvar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
