@model HistoricoPagamentoViewModel
@{
    ViewData["Title"] = "Registrar Pagamento";
}

<h4 class="text-white mb-3"><i class="bi bi-cash"></i> Registrar Pagamento</h4>

<div class="card bg-dark border-secondary mb-3" style="max-width: 600px;">
    <div class="card-body text-white">
        <dl class="row mb-0">
            <dt class="col-sm-4">Caixa Postal</dt>
            <dd class="col-sm-8">@Model.CodigoCaixa</dd>
            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.NomeCliente</dd>
            <dt class="col-sm-4">Valor da Cobrança</dt>
            <dd class="col-sm-8">@Model.ValorCobranca.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</dd>
        </dl>
    </div>
</div>

<div class="card bg-dark border-secondary" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Criar" method="post">
            <input type="hidden" asp-for="IdCobranca" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="DataPagamento" class="form-label text-white">Data do Pagamento</label>
                <input asp-for="DataPagamento" class="form-control bg-dark text-white border-secondary" type="date" />
                <span asp-validation-for="DataPagamento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ValorPago" class="form-label text-white">Valor Pago (R$)</label>
                <input asp-for="ValorPago" class="form-control bg-dark text-white border-secondary" type="number" step="0.01" />
                <span asp-validation-for="ValorPago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdFormaPagamento" class="form-label text-white">Forma de Pagamento</label>
                <select asp-for="IdFormaPagamento" asp-items="Model.ListaFormasPagamento"
                        class="form-select bg-dark text-white border-secondary">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="IdFormaPagamento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Observacao" class="form-label text-white">Observação</label>
                <textarea asp-for="Observacao" class="form-control bg-dark text-white border-secondary" rows="3"></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-check-lg"></i> Confirmar Pagamento</button>
                <a asp-controller="Cobrancas" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
