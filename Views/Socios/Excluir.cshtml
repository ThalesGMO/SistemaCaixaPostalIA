@model Socio
@{
    ViewData["Title"] = "Excluir Sócio";
}

<h4 class="text-white mb-3"><i class="bi bi-trash"></i> Excluir Sócio</h4>

<div class="card bg-dark border-danger" style="max-width: 600px;">
    <div class="card-body">
        <p class="text-white">Tem certeza que deseja excluir o sócio <strong>@Model.Nome</strong>?</p>

        <dl class="row text-white">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">@Model.Numero</dd>
        </dl>

        <form asp-action="Excluir" method="post">
            <input type="hidden" value="@Model.Id" name="id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
